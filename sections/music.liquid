<style>
  .music {
    padding: 6rem 0;
    background: transparent;
  }

  .music__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .music__bandcamp-container {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .music__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.text_color }};
  }

  .music__grid {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    justify-items: center;
  }

  .music__platform-button {
    background: transparent;
    border: 2px solid #000000;
    border-radius: 500px;
    color: #000000;
    padding: 1rem 2rem;
    font-size: 1.4rem;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    max-width: 200px;
    justify-content: center;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
  }

  .music__platform-button:hover {
    transform: scale(1.1);
  }

  /* Special Bandcamp button styles */
  .music__platform-button[href*="bandcamp"] {
    position: relative;
    z-index: 1;
  }

  .music__platform-button[href*="bandcamp"]::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 500px;
    background: linear-gradient(
      45deg,
      #ff6b6b,
      #ffd93d,
      #6bcb77,
      #4d96ff
    );
    opacity: 0;
    z-index: -1;
    transition: all 0.5s ease;
  }

  .music__platform-button[href*="bandcamp"]::after {
    content: '';
    position: absolute;
    inset: 0;
    background: url('{{ "sparkle.gif" | asset_url }}') center/cover;
    opacity: 0;
    z-index: -1;
    transition: opacity 0.5s ease;
    border-radius: 500px;
  }

  .music__platform-button[href*="bandcamp"]:hover {
    transform: scale(1.2);
    border-color: transparent;
    color: white;
  }

  .music__platform-button[href*="bandcamp"]:hover::before {
    opacity: 1;
  }

  .music__platform-button[href*="bandcamp"]:hover::after {
    opacity: 0.3;
  }

  .music__platform-button[href*="bandcamp"] .music__platform-icon {
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .music__platform-button[href*="bandcamp"]:hover .music__platform-icon {
    transform: rotate(360deg) scale(1.2);
    filter: brightness(0) invert(1);
  }

  .music__platform-icon {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 749px) {
    .music {
      padding: 4rem 0;
    }

    .music__title {
      font-size: 2rem;
    }

    .music__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3.5rem;
    }

    .music__platform-button {
      font-size: 1.2rem;
      padding: 1rem 2rem;
    }
  }
</style>

