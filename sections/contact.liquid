{% comment %} Contact form section {% endcomment %}
<style>
  .contact {
    padding: 6rem 0;
    background: transparent;
  }

  .contact__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .contact__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.text_color }};
  }

  .contact__description {
    font-size: 1.1rem;
    color: {{ section.settings.text_color | color_modify: 'alpha', 0.8 }};
    max-width: 600px;
    margin: 0 auto;
  }

  .contact__content {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
  }

  .contact__form {
    display: grid;
    gap: 2rem;
  }

  .contact__field {
    display: grid;
    gap: 0.5rem;
  }

  .contact__label {
    font-size: 1.2rem;
    color: {{ section.settings.text_color }};
    margin-left: 0.5rem;
  }

  .contact__input,
  .contact__textarea {
    width: 100%;
    padding: 0.5rem 0.5rem 0.2rem 0.5rem;
    border: none;
    border-bottom: 2px solid {{ section.settings.text_color | color_modify: 'alpha', 1 }};
    background: transparent;
    font-size: 1.8rem;
    transition: all 0.3s ease;
    font-family: var(--font-body-family);
  }

  .contact__textarea {
    min-height: 100px;
    resize: vertical;
    line-height: 1.4;
  }

  .contact__input:focus,
  .contact__textarea:focus {
    outline: none;
    border-bottom-color: {{ section.settings.text_color }};
  }

  .contact__input::placeholder,
  .contact__textarea::placeholder {
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    font-style: normal;
    font-family: var(--font-body-family);
    font-size: 1.8rem;
  }

  .contact__success {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .contact__error {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 0, 0, 0.1);
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  @media screen and (max-width: 749px) {
    .contact {
      padding: 4rem 0;
    }

    .contact__title {
      font-size: 2rem;
    }
  }
</style>

<section id="contact" class="contact">
  <div class="contact__header">
    <h2 class="contact__title">{{ section.settings.title }}</h2>
    {%- if section.settings.description != blank -%}
      <p class="contact__description">{{ section.settings.description }}</p>
    {%- endif -%}
  </div>

  <div class="contact__content">
    {%- form 'contact', id: 'ContactForm', class: 'contact__form' -%}
      {%- if form.posted_successfully? -%}
        <div class="contact__success" role="status">
          <p style="color: {{ section.settings.text_color }};">Yay! Thanks for your message! I'll write back soon üíå</p>
        </div>
      {%- endif -%}

      {%- if form.errors -%}
        <div class="contact__error" role="alert">
          <p style="color: #cf0000;">Oops! Something went wrong. Could you try again? üôè</p>
        </div>
      {%- endif -%}

      <div class="contact__field">
        <input
          type="text"
          id="ContactForm-name"
          name="contact[name]"
          class="contact__input"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          placeholder="What's your name? üòä"
          required
        >
      </div>

      <div class="contact__field">
        <input
          type="email"
          id="ContactForm-email"
          name="contact[email]"
          class="contact__input"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          placeholder="Your email please! üå∏"
          required
        >
      </div>

      <div class="contact__field">
        <textarea
          id="ContactForm-message"
          name="contact[body]"
          class="contact__textarea"
          placeholder="Tell me what's on your mind! üí≠"
          required
        >{% if form.body %}{{ form.body }}{% endif %}</textarea>
      </div>

      <button type="submit" class="button-primary">Send Message ‚úâÔ∏è</button>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Contact"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Get in touch with us for any inquiries or collaborations."
    },
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Field Label",
      "default": "Name"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Field Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "message_label",
      "label": "Message Field Label",
      "default": "Message"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Send Message"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thanks for contacting us! We'll get back to you soon."
    },
    {
      "type": "text",
      "id": "error_message",
      "label": "Error Message",
      "default": "There was an error sending your message. Please try again."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}
